<!-- ======= Player Section ======= -->
<section id="player" class="padd-section text-center">

<div class="container" data-aos="fade-up">
  <div class="section-title text-center">
    <h2>${{ player.title }}$</h2>
    <img src="<%= path %>assets/img/player/logo.svg" width="120px" height="120px" alt="Next2D Player">
    <p class="separator">${{ player.description }}$</p>
  </div>

  <div class="row" data-aos="fade-up" data-aos-delay="100">

    <div class="col-md-6 col-lg-3">
      <div class="feature-block">
        <img loading="lazy" src="<%= path %>assets/img/player/feature-01.svg" width="60px" height="60px" alt="Open Source">
        <h4>${{ player.feature1-title }}$</h4>
        <p>${{ player.feature1-description }}$</p>
      </div>
    </div>

    <div class="col-md-6 col-lg-3">
      <div class="feature-block">
        <img loading="lazy" src="<%= path %>assets/img/player/feature-02.svg" width="60px" height="60px" alt="Fast">
        <h4>${{ player.feature2-title }}$</h4>
        <p>${{ player.feature2-description }}$</p>
      </div>
    </div>

    <div class="col-md-6 col-lg-3">
      <div class="feature-block">
        <img loading="lazy" src="<%= path %>assets/img/player/feature-03.svg" width="60px" height="60px" alt="Full WebGL support">
        <h4>${{ player.feature3-title }}$</h4>
        <p>${{ player.feature3-description }}$</p>
      </div>
    </div>

    <div class="col-md-6 col-lg-3">
      <div class="feature-block">
        <img loading="lazy" src="<%= path %>assets/img/player/feature-04.svg" width="60px" height="60px" alt="Various Text Functions">
        <h4>${{ player.feature4-title }}$</h4>
        <p>${{ player.feature4-description }}$</p>
      </div>
    </div>

    <div class="col-md-6 col-lg-3">
      <div class="feature-block">
        <img loading="lazy" src="<%= path %>assets/img/player/feature-05.svg" width="60px" height="60px" alt="Multi-Platform Support">
        <h4>${{ player.feature5-title }}$</h4>
        <p>${{ player.feature5-description }}$</p>
      </div>
    </div>

    <div class="col-md-6 col-lg-3">
      <div class="feature-block">
        <img loading="lazy" src="<%= path %>assets/img/player/chrome.svg" width="60px" height="60px" alt="chrome">
        <img loading="lazy" src="<%= path %>assets/img/player/firefox.svg" width="60px" height="60px" alt="firefox">
        <img loading="lazy" src="<%= path %>assets/img/player/safari.svg" width="60px" height="60px" alt="safari">
        <img loading="lazy" src="<%= path %>assets/img/player/edge.svg" width="60px" height="60px" alt="edge">
        <h4>${{ player.feature6-title }}$</h4>
        <p>${{ player.feature6-description }}$</p>
      </div>
    </div>

    <div class="col-md-6 col-lg-3">
      <div class="feature-block">
        <img loading="lazy" src="<%= path %>assets/img/player/feature-06.svg" width="60px" height="60px" alt="API">
        <h4>${{ player.feature7-title }}$</h4>
        <p>${{ player.feature7-description }}$</p>
      </div>
    </div>

    <div class="col-md-6 col-lg-3">
      <div class="feature-block">
        <img loading="lazy" src="<%= path %>assets/img/player/feature-07.svg" width="60px" height="60px" alt="MP3">
        <h4>${{ player.feature8-title }}$</h4>
        <p>${{ player.feature8-description }}$</p>
      </div>
    </div>

  </div>

  <nav class="feature-nav">
    <ul class="list-unstyled">
      <li><a href="https://github.com/Next2D/Player/releases" class="btn"><i class="bi bi-github"></i> Download</a></li>
      <li><a href="<%= path %>${{ main.lang }}$/docs/player" class="btn"><i class="bi bi-book"></i> ${{ main.docs-title }}$</a></li>
      <li><a href="<%= path %>${{ main.lang }}$/reference/player" class="btn"><i class="bi bi-lightbulb"></i> ${{ main.reference-title }}$</a></li>
    </ul>
  </nav>

</div>
</section><!-- End Player Section -->
